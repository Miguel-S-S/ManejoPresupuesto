@model Categoria

@{
    ViewData["Title"] = "Borrar categoria";
}

<h3 class="mb-3">Quiere continuar con el borrado de @Model.Nombre</h3>

<form asp-action="BorrarCategoria">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Continuar</button>
    <a class="btn btn-secondary" asp-action="Index">Abort the axion</a>
</form>