@model TipoCuenta

@{
    ViewData["Title"] = "Crear Tipo Cuenta";
}

<h1>Crear Tipo de Cuenta</h1>
<h5>El tipo de cuenta se refiere a como podemos agrupar cuentas. Ejemplos: Prestamos,tarjetas de credito, etc.</h5>

@*linea que muestra al usuario los campos requeridos*@
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
@*fin linea*@
<form asp-action="Crear">
    <div class="mb-3">
        @*sincroniza los datos ingresados: asp-for para mantener los datos ingresados en el campo cargado*@
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>

</form>

        @section Scripts
                    
                  {
                      <partial name="_ValidationScriptsPartial" />
                  }

           